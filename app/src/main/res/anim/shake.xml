<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially"
    android:fillAfter="true"
    >

    <translate
        android:duration="50"
        android:fromXDelta="2%"
        android:fromYDelta="-2%"
        android:toXDelta="5%"
